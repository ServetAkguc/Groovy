package com.test.demo

//Conditional Statements Decision making statement

def num = 11

if (num ==10) {
	println "num is 10"
}else {
	println "it is not true"
}
// to check the number is - or +
if (num > 0) {
	println "num is positive"
}else if(num==0) {
	println "num is zero"
}else {
	println "num is negative"
}

//switch case
def x =0
def result =""
switch (x) {
	case 0:
		result = "x is zero"
		break
	case {x>0}:
		result = "x is +ve"
		break
	case{x<0}:
		result = "x is -ve"
		break
	default:
	result = "Invalid number"
}
println result
